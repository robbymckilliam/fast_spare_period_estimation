% colour definitions from beamerthemeI6dv.sty
\definecolor{i6colorscheme3}{HTML}{C3DFFF}

\setbeamercolor{headline}{fg=white,bg=UniSAblue}
\setbeamercolor{footline}{fg=white, bg=UniSAblue}
\setbeamerfont{footline}{size=\normalsize}%,series=\tt}
