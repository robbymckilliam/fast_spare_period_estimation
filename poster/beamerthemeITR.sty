\setbeamercolor{alerted text}{fg=UniSAorange}

\setbeamercolor{structure}{fg=UniSAorange}

\setbeamertemplate{itemize items}[ball]
\setbeamertemplate{enumerate items}[ball]

% increase item indentation for enumerate environment (due to large balls)
\let\enumerateorig=\enumerate
\let\endenumerateorig=\endenumerate
\renewenvironment{enumerate}{
	\addtolength{\leftmargini}{1ex}%
	\enumerateorig%
}{
	\endenumerateorig
}

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=0.5em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=0.18em,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
    	% locally change the background colour of the (alert)block environment. Otherwise the body of the (alert)block wouldn't have any contrast to the white background of the outer block.
    	\setbeamercolor{block body}{bg=i6colorscheme3!20!white}
	\setbeamercolor{block body alerted}{bg=i6colorscheme3!20!white}
    \begin{minipage}[T]{.95\textwidth} % tweaks the width, makes a new \textwidth (otherwise \items occur too far left...)
  }
  \setbeamertemplate{block end}{
  \end{minipage}
  \end{beamercolorbox}
}

